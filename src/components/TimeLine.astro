i---
const { title, subtitle, image_link, image_alt } = Astro.props;
import { Image } from "astro:assets";
---
<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-2 sm:px-5 flex-1 min-w-0">
    <div class="collapse bg-base-200 collapse-item">
      <input type="checkbox" class="collapse-checkbox" />
      <div class="collapse-title text-l font-medium pl-12 sm:pl-15">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center items-center text-center sm:text-left gap-3">
          <div class="order-1 sm:order-2 w-20 h-20 sm:w-24 sm:h-24 flex items-center justify-center p-2 shrink-0">
            <Image
              src={image_link}
              alt={image_alt}
              class="object-contain max-w-full max-h-full"
              height="120"
              width="120"
            />
          </div>
          <div class="order-2 sm:order-1 flex-1 min-w-0">
            <h3 class="font-semibold mb-1 ">{title}</h3>
            <span class="font-normal text-medium text-primary ">{subtitle}</span>
          </div>
        </div>
        <div class="chevron-icon flex justify-center mt-3 transition-transform duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </div>
      </div>
      <div class="collapse-content !px-2 sm:!px-4">
        <div class="my-2 text-justify max-w-none">
          <slot />
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const collapseItems = document.querySelectorAll('.collapse-item');
    
    collapseItems.forEach(item => {
      const checkbox = item.querySelector('.collapse-checkbox');
      const chevron = item.querySelector('.chevron-icon');
      
      if (checkbox && chevron) {
        checkbox.addEventListener('change', () => {
          chevron.style.transform = checkbox.checked ? 'rotate(180deg)' : 'rotate(0deg)';
        });
      }
    });
  });
</script>

<style>
  .collapse-content :global(.divider) {
    @apply whitespace-nowrap;
  }
  
  @media (max-width: 640px) {
    .collapse-content :global(.divider) {
      @apply whitespace-normal;
    }
  }
</style>