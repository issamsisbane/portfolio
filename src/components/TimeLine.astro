---
const { title, subtitle, image_link, image_alt } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>

  <div class="experience__data bd-grid px-5 flex-1">
    <div class="collapse bg-base-200">
      <input type="checkbox" />
      <div class="collapse-title text-l font-medium pl-12 sm:pl-15">
        <!-- Nouveau wrapper flex-col centrÃ© sur mobile -->
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center items-center text-center sm:text-left gap-3">
          <!-- logo -->
          <div class="order-1 sm:order-2 w-28 h-28 sm:w-24 sm:h-24 flex items-center justify-center p-2 shrink-0 ">
            <Image
              src={image_link}
              alt={image_alt}
              class="object-contain max-w-full max-h-full"
              height="120"
              width="120"
            />
          </div>
          <!-- texte -->
          <div class="order-2 sm:order-1">
            <h3 class="font-semibold mb-1">{title}</h3>
            <span class="font-light text-sm text-primary">{subtitle}</span>
          </div>
        </div>
        <div class="text-center toggle-icon">+</div>
      </div>

      <div class="collapse-content">
        <p class="my-2 text-justify">
          <slot />
        </p>
      </div>
    </div>
  </div>
</div>

