---
const { title, subtitle, image_link, image_alt } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <div class="collapse bg-base-200">
      <input type="checkbox" />
      <div class="collapse-title text-xl font-medium">
        <div class="flex justify-between">
          <div>
            <h3 class="font-semibold mb-1">{title}</h3>
            <span class="font-light text-sm text-primary">{subtitle}</span>
          </div>
          <Image src={image_link} alt={image_alt} height="120" width="120" />
        </div>
      </div>
      <div class="collapse-content">
        <p class="my-2 text-justify">
          <slot />
        </p>
      </div>
    </div>
  </div>
</div>
