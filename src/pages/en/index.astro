---
import BaseLayout from "../../layouts/en/BaseLayout.astro";
import HorizontalCard from "../../components/en/HorizontalCard.astro";
import Education from "../../components/en/Education.astro";
import Certifications from "../../components/en/Certifications.astro";
import Experience from "../../components/en/Experience.astro";
import TechStack from "../../components/en/TechStack.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home" title={"Home"}>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there <p class="wave">ðŸ‘‹</p></div>
    <div class="text-5xl font-bold">I'm Issam SISBANE</div>
    <div class="text-3xl py-3 font-bold">
      Software & Cloud (Apprentice) Engineer
    </div>
    <div class="py-2">
      <text class="text-lg">
        <p class="text-justify">
          I love learning & bulding things using <b>innovative solution</b> and way
          of doing. Always seeking for new challenges and opportunities. As a <b
            >tech enthusiast</b
          >, I am passionate about <b>discovering</b> emerging technologies and exploring
          their potential applications. I thrive on staying at the forefront of <b
            >innovation</b
          > and embracing <b>new ideas</b>.
        </p>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:issam.sisbane@gmail.com" target="_blank">
        Let's connect!</a
      >
      <a
        href="https://drive.google.com/file/d/1T0UHVfus6qZHbvt_m5LxpMcR1UyoFcO5/view?usp=sharing"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        Get My resume
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My tech stack {"<ðŸ› >"}
    </div>
  </div>

  <br />
  <TechStack />
  <br />

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My Selected projects {"</>"}
    </div>
  </div>

  <HorizontalCard
    title="Clippy"
    img="/portfolio/clippy.jpg"
    desc="A web platform allowing for the ephemeral sharing of information, following the model of Pastebin."
    url="/portfolio/en/projects/clippy"
    badge="PERSONAL"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Technology Watch "
    img="/portfolio/technology_watch_img.webp"
    desc="A state of art of health data analysis and a machine learning basics introduction."
    url="/portfolio/en/projects/technology-watch"
    badge="SCHOOL & WORK"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Park IT !"
    img="/portfolio/parkit_img.webp"
    desc="An innovative IoT solution aimed at simplifying parking. With smart sensors and a user-friendly application, it provides an optimized parking experience."
    url="/portfolio/en/projects/park-it"
    badge="SCHOOL"
  />
  <div class="divider my-0"></div>
  <div class="flex justify-end">
    <a href="/portfolio/en/projects"
      ><button class="btn btn-outline btn-sm">Other projects ...</button></a
    >
  </div>
  <br />
  <Experience />

  <Education />

  <Certifications />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts
      .filter((post) => post.data.lang == "en")
      .map((post) => (
        <>
          <HorizontalCard
            title={post.data.title}
            img={post.data.heroImage}
            desc={post.data.description}
            url={"/blog/" + createSlug(post.data.title, post.slug)}
            target="_self"
            badge={post.data.badge}
          />
          <div class="divider my-0" />
        </>
      ))
  }
</BaseLayout>
