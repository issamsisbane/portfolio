---
import BaseLayout from "../../layouts/en/BaseLayout.astro";
import HorizontalCard from "../../components/en/HorizontalCard.astro";
import Education from "../../components/en/Education.astro";
import Certifications from "../../components/en/Certifications.astro";
import Experience from "../../components/en/Experience.astro";
import TechStack from "../../components/en/TechStack.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";

const posts = (await getCollection("blog"))
.filter((post) => post.data.lang == "en")
.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const last_posts = posts.slice(0, 3);

const projects = (await getCollection("projects"))
.filter((project) => project.data.lang == "en")
.filter((project) => project.data.selected == true)
.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const last_projects = projects.slice(0, 3);


---

<BaseLayout sideBarActiveItemID="home" title={"Home"}>
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there <p class="wave">ðŸ‘‹</p></div>
    <div class="text-5xl font-bold">I'm Issam SISBANE</div>
    <div class="text-3xl py-3 font-bold">
      Software & Cloud (Apprentice) Engineer
    </div>
    <div class="py-2">
      <text class="text-lg">
        <p class="text-justify">
          I love learning & bulding things using <b>innovative solution</b> and way
          of doing. Always seeking for new challenges and opportunities. As a <b
            >tech enthusiast</b
          >, I am passionate about <b>discovering</b> emerging technologies and exploring
          their potential applications. I thrive on staying at the forefront of <b
            >innovation</b
          > and embracing <b>new ideas</b>.
        </p>
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:issam.sisbane@gmail.com" target="_blank" title="issam.sisbane@gmail.com">
        Let's connect!</a
      >
      <a
        href="https://drive.google.com/file/d/1T0UHVfus6qZHbvt_m5LxpMcR1UyoFcO5/view?usp=sharing"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        Get My resume
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My tech stack {"<ðŸ› >"}
    </div>
  </div>

  <br />
  <TechStack />
  <br />

  <div>
    <div class="text-3xl w-full font-bold mb-2">
      My Selected projects {"</>"}
    </div>
  </div>

  {
    last_projects
      .map((project) => (
        <>
          <HorizontalCard
            title={project.data.title}
            img={project.data.heroImage}
            desc={project.data.description}
            url={"/portfolio/en/projects/" + createSlug(project.data.title, project.slug)}
            target="_self"
            badge={project.data.badge}
          />
          <div class="divider my-0" />
        </>
      ))
  }
  <div class="flex justify-end">
    <a href="/portfolio/en/projects"
      ><button class="btn btn-outline btn-sm">Other projects ...</button></a
    >
  </div>
  <br />
  <Experience />

  <Education />

  <Certifications />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts
      .map((post) => (
        <>
          <HorizontalCard
            title={post.data.title}
            img={post.data.heroImage}
            desc={post.data.description}
            url={"/portfolio/en/blog/" + createSlug(post.data.title, post.slug)}
            target="_self"
            badge={post.data.badge}
          />
          <div class="divider my-0" />
        </>
      ))
  }
  <div class="flex justify-end">
    <a href="/portfolio/en/blog"
      ><button class="btn btn-outline btn-sm">Other posts ...</button></a
    >
  </div>
</BaseLayout>
